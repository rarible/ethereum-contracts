                            <type>MONO</type>
                        </contract>
                        <!--exchange blur -->
                        <contract>
                            <abi>src/main/truffle/exchange/blur/v1/BlurV1.json</abi>
                            <packageName>com.rarible.protocol.contracts.exchange.blur.v1</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <abi>src/main/truffle/exchange/blur/v1/BlurV2.json</abi>
                            <packageName>com.rarible.protocol.contracts.exchange.blur.v2</packageName>
                            <type>MONO</type>
                        </contract>
                        <!--sudoswap -->
                        <contract>
                            <truffle>src/main/truffle/exchange/sudoswap/LSSVMPairFactoryV1.json</truffle>
                            <packageName>com.rarible.protocol.contracts.exchange.sudoswap.v1.factory</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src/main/truffle/exchange/sudoswap/LSSVMPairV1.json</truffle>
                            <packageName>com.rarible.protocol.contracts.exchange.sudoswap.v1.pair</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <abi>src/main/truffle/exchange/sudoswap/ICurveV1.json</abi>
                            <packageName>com.rarible.protocol.contracts.exchange.sudoswap.v1.curve</packageName>
                            <type>MONO</type>
                        </contract>
                        <!-- exchange gemswap -->
                        <contract>
                            <abi>src/main/truffle/exchange/gemswap/GemSwapV1.json</abi>
                            <packageName>com.rarible.protocol.contracts.exchange.gemswap.v1</packageName>
                            <type>MONO</type>
                        </contract>
                        <!-- exchange wyvern -->
                        <contract>
                            <truffle>src/main/truffle/common/wyvern/token/TestToken.json</truffle>
