                        <contract>
                            <truffle>src/main/truffle/exchange/zeroEx/ZeroExFeeWrapper.json</truffle>
                            <packageName>com.rarible.protocol.contracts.exchange.zero.ex</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src/main/truffle/common/erc721//TestERC721.json</truffle>
                            <packageName>com.rarible.protocol.contracts.common.erc721</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src/main/truffle/exchange/cryptoPunks/CryptoPunksMarket.json</truffle>
                            <packageName>com.rarible.protocol.contracts.exchange.crypto.punks</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src/main/truffle/exchange/cryptoPunks/ICryptoPunksMarket.json</truffle>
                            <packageName>com.rarible.protocol.contracts.exchange.crypto.punks</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src/main/truffle/exchange/cryptoPunks/PunkTransferProxy.json</truffle>
                            <packageName>com.rarible.protocol.contracts.exchange.crypto.punks</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src/main/truffle/exchange/cryptoPunks/AssetMatcherPunk.json</truffle>
                            <packageName>com.rarible.protocol.contracts.exchange.crypto.punks</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src/main/truffle/auction/v1/AuctionHouse.json</truffle>
                            <packageName>com.rarible.protocol.contracts.auction.v1</packageName>
                            <type>MONO</type>
                        </contract>

                        <!--wrapper exchange-->
                        <contract>
                            <abi>src/main/truffle/exchange/wrapper/ExchangeWrapper.json</abi>
                            <packageName>com.rarible.protocol.contracts.exchange.wrapper</packageName>
                            <type>MONO</type>
                        </contract>

                        <!-- x2y2 -->
                        <contract>
                            <abi>src/main/truffle/exchange/x2y2/v1/X2Y2_r1.json</abi>
                            <packageName>com.rarible.protocol.contracts.exchange.x2y2.v1</packageName>
                            <type>MONO</type>
                        </contract>
                    </contracts>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>io.daonomic.scalether</groupId>
            <artifactId>contract-mono_${scala.major.version}</artifactId>
            <version>${scalether.version}</version>
        </dependency>
    </dependencies>
</project>
