<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>rarible-protocol-ethereum-contracts</artifactId>
        <groupId>com.rarible.protocol.contracts</groupId>
        <version>${revision}</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>protocol-ethereum-contracts-order</artifactId>

    <build>
        <plugins>
            <plugin>
                <groupId>net.alchim31.maven</groupId>
                <artifactId>scala-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>io.daonomic.scalether</groupId>
                <artifactId>scalether-maven-plugin</artifactId>
                <configuration>
                    <contracts>
                        <contract>
                            <truffle>src/main/truffle/common/TransferProxy.json</truffle>
                            <packageName>com.rarible.protocol.contracts.common</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src/main/truffle/common/deprecated/TransferProxyForDeprecated.json</truffle>
                            <packageName>com.rarible.protocol.contracts.common.deprecated</packageName>
                            <type>MONO</type>
                        </contract>
                        <!--ERC-20-->
                        <contract>
                            <truffle>src/main/truffle/erc20/proxy/ERC20TransferProxy.json</truffle>
                            <packageName>com.rarible.protocol.contracts.erc20.proxy</packageName>
                            <type>MONO</type>
                        </contract>
                        <!--exchange-->
                        <contract>
                            <truffle>src/main/truffle/exchange/v1/ExchangeV1.json</truffle>
                            <packageName>com.rarible.protocol.contracts.exchange.v1</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src/main/truffle/exchange/v2/ExchangeV2.json</truffle>
                            <packageName>com.rarible.protocol.contracts.exchange.v2</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src/main/truffle/exchange/v2/ExchangeV2rev3.json</truffle>
                            <packageName>com.rarible.protocol.contracts.exchange.v2.rev3</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src/main/truffle/common/royalties/TestRoyaltiesProvider.json</truffle>
                            <packageName>com.rarible.protocol.contracts.royalties</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src/main/truffle/exchange/v1/ExchangeStateV1.json</truffle>
                            <packageName>com.rarible.protocol.contracts.exchange.v1.state</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src\main\truffle\exchange\meta-tx\v1\EIP712MetaTransaction.json</truffle>
                            <packageName>com.rarible.protocol.contracts.exchange.metatx</packageName>
                            <type>MONO</type>
                        </contract>
                        <!--exchange wyvern -->
                        <contract>
                            <truffle>src/main/truffle/exchange/wyvern/WyvernExchange.json</truffle>
                            <packageName>com.rarible.protocol.contracts.exchange.wyvern</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src/main/truffle/common/opensea/MerkleValidator.json</truffle>
                            <packageName>com.rarible.protocol.contracts.common.opensea.merkle</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src/main/truffle/common/wyvern/registry/WyvernProxyRegistry.json</truffle>
                            <packageName>com.rarible.protocol.contracts.common.wyvern.registry</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src/main/truffle/common/wyvern/proxy/WyvernTokenTransferProxy.json</truffle>
                            <packageName>com.rarible.protocol.contracts.common.wyvern.proxy</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <truffle>src/main/truffle/common/wyvern/atomicizer/WyvernAtomicizer.json</truffle>
                            <packageName>com.rarible.protocol.contracts.common.wyvern.atomicizer</packageName>
                            <type>MONO</type>
                        </contract>
                        <!--exchange seaport -->
                        <contract>
                            <abi>src/main/truffle/exchange/seaport/v1/SeaportV1.json</abi>
                            <packageName>com.rarible.protocol.contracts.exchange.seaport.v1</packageName>
                            <type>MONO</type>
                        </contract>
                        <contract>
                            <abi>src/main/truffle/exchange/seaport/v1_4/SeaportV1_4.json</abi>
                            <packageName>com.rarible.protocol.contracts.exchange.seaport.v1_4</packageName>
                            <type>MONO</type>
                        </contract>
                        <!--exchange looksrare -->
                        <contract>
                            <truffle>src/main/truffle/exchange/looksrare/LooksrareExchangeV1.json</truffle>
